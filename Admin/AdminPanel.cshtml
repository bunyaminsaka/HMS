

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #1f2937; color: white;">

    <div class="container py-5">
        <h1 class="fw-bold">Doctor Panel</h1>
        <p>
            View and manage your working dates, specialization, and schedule.
        </p>
        <a href="Index.html" class="btn btn-light">Back to Dashboard</a>

        <h3 class="mt-5">Your Information</h3>

        <!-- Table for displaying doctor info -->
        <table class="table table-dark table-striped mt-4">
            <thead>
                <tr>
                    <th scope="col">PWZ Number</th>
                    <th scope="col">Specialization</th>
                    <th scope="col">Role</th>
                    <th scope="col">Day</th>
                    <th scope="col">Hours</th>
                </tr>
            </thead>
            <tbody id="doctor-table-body">
                <!-- Doctor's data will be inserted dynamically -->
                <!-- Example data here for simulation -->
            </tbody>
        </table>
    </div>

    <script>
        // Simulating logged-in doctor (example, replace with dynamic login data in real application)
        const loggedInDoctorPWZ = "PL123456789";  // Example PWZ number

        // Simulated doctor data
        const doctorsData = [
            { pwz: "PL123456789", specialization: "Cardiology", role: "Doctor", day: "2025-01-30", hours: "08:00 - 16:00" },
            { pwz: "PL987654321", specialization: "Neurology", role: "Doctor", day: "2025-01-31", hours: "09:00 - 17:00" },
            { pwz: "PL112233445", specialization: "Orthopedics", role: "Doctor", day: "2025-02-01", hours: "10:00 - 18:00" }
        ];

        // Function to display data for the logged-in doctor only
        window.onload = function() {
            const tableBody = document.getElementById("doctor-table-body");

            // Filter data for the logged-in doctor based on PWZ number
            const doctorData = doctorsData.filter(doctor => doctor.pwz === loggedInDoctorPWZ);

            // Insert data into the table
            doctorData.forEach(doctor => {
                const row = tableBody.insertRow();
                row.innerHTML = `
                    <td>${doctor.pwz}</td>
                    <td>${doctor.specialization}</td>
                    <td>${doctor.role}</td>
                    <td>${doctor.day}</td>
                    <td>${doctor.hours}</td>
                `;
            });
        };
    </script>
</body>
</html>
