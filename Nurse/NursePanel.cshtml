<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nurse Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #1f2937; color: white;">

    <div class="container py-5">
        <h1 class="fw-bold">Nurse Panel</h1>
        <div class="mt-4">
            <h5>Nurse's Information</h5>
            <p><strong>Name:</strong> Pielęgniarka Anna Nowak</p>
            <p><strong>PWZ Number:</strong> PL556677889</p>
        </div>

        <!-- Table for displaying nurse info -->
        <table class="table table-dark table-striped mt-4">
            <thead>
                <tr>
                    <th scope="col">PWZ Number</th>
                    <th scope="col">Day</th>
                    <th scope="col">Hours</th>
                </tr>
            </thead>
            <tbody id="nurse-table-body">
                <!-- Nurse data will be inserted here -->
            </tbody>
        </table>

        <!-- Random Polish nurse details -->

    </div>

    <script>
        // Simulating logged-in nurse (example, replace with dynamic login data in real application)
        const loggedInNursePWZ = "PL556677889";  // Example PWZ number

        // Simulated nurse data
        const nursesData = [
            { pwz: "PL556677889", role: "Nurse", day: "2025-02-02", hours: "08:30 - 16:30" }
        ];

        // Function to display data for the logged-in nurse only
        window.onload = function() {
            const tableBody = document.getElementById("nurse-table-body");

            // Filter data for the logged-in nurse based on PWZ number
            const nurseData = nursesData.filter(nurse => nurse.pwz === loggedInNursePWZ);

            // Insert data into the table
            nurseData.forEach(nurse => {
                const row = tableBody.insertRow();
                row.innerHTML = `
                    <td>${nurse.pwz}</td>
                    <td>${nurse.day}</td>
                    <td>${nurse.hours}</td>
                `;
            });
        };
    </script>
</body>
</html>
